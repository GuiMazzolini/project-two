<div class='container'>
  <div class='col text-center'>
    <h1 class='text-center mt-5'>Welcome {{user.username}}</h1>

    <div class='d-grid mt-3'>
       <a href="/project/create">
      <button class='btn btn-primary col-2 mb-2' type='button'>Add a project</button>
       </a>
    </div>
  </div>
</div>
<hr class="mb-3">
<h3 class="text-center"> Your Projects: </h3>
<div class="container text-center ">
  <div class="row justify-content-evenly">
{{#each project}} 
  <div class='col-sm-12 col-md-6 col-xl-3 m-1 card mb-5'>
      <h5 class='card-title mt-1'>{{name}}</h5>

      <img src={{image}} class="mx-auto d-block" alt='...' />
      <div class='card-body'>
        <p class='description mx-auto d-block'>{{description}}</p>
        <form role='search'>
          <a href='/project/{{_id}}/edit' class='btn btn-secondary btn-lg mt-1'> Edit Project </a>

        </form>
        <form role='search'>
          <a href='/project/{{_id}}/delete' class='btn btn-secondary btn-lg mt-0.5'>Delete Project</a>
        </form>
      </div>

    </div>
  
{{/each}}

    </div>
    </div>